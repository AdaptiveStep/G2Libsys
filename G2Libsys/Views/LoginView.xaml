<local:BasePage
    x:Class="G2Libsys.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:G2Libsys.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:G2Libsys.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControl="clr-namespace:G2Libsys.Controls"
    xmlns:vm="clr-namespace:G2Libsys.ViewModels"
    MinWidth="800"
    MinHeight="450"
    x:TypeArguments="vm:LoginViewModel"
    mc:Ignorable="d">
    <Grid>
        <Rectangle Opacity="0.6">
            <Rectangle.Fill>
                <SolidColorBrush Color="Black" />
            </Rectangle.Fill>
        </Rectangle>
        <Button
            Width="{Binding (FrameworkElement.ActualWidth)}"
            Height="{Binding (FrameworkElement.ActualHeight)}"
            Background="Transparent"
            Command="{Binding CancelCommand}"
            Cursor="Arrow"
            Style="{StaticResource MaterialDesignToolForegroundButton}" />

        <materialDesign:Card
            Height="{Binding (FrameworkElement.ActualHeight), RelativeSource={RelativeSource AncestorType={x:Type Frame}}}"
            MaxWidth="700"
            MaxHeight="500"
            Margin="10,14,10,10"
            Padding="10"
            Background="{DynamicResource MaterialDesignChipBackground}"
            Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
            UniformCornerRadius="10">
            <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <Grid Height="{Binding (FrameworkElement.ActualHeight)}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label
                            Width="257"
                            Height="32"
                            Margin="10,10,10,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="{x:Null}"
                            Content="Logga in med din e-postadress"
                            FontSize="18"
                            Foreground="#DDFFFFFF" />
                        <TextBox
                            Width="257"
                            Height="32"
                            Margin="10"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Background="#FFBFBFBF"
                            FontSize="18"
                            SelectionBrush="#FFF7F7F7"
                            SelectionTextBrush="Black"
                            Text="{Binding Username, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        <Label
                            Width="160"
                            Height="32"
                            Margin="10,10,10,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="{x:Null}"
                            Content="Ange ditt lösenord"
                            FontSize="18"
                            Foreground="#DDFFFFFF" />

                        <!--<PasswordBox
            Width="257"
            Height="40"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFBDB9B9"
            CaretBrush="#FFBDBBBB"
            FontSize="18"
            Foreground="Black"
            SelectionBrush="#FFBDBBBB"
            SelectionTextBrush="#FF050000" />-->

                        <TextBox
                            Width="257"
                            Height="32"
                            Margin="10"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Background="#FFBDB9B9"
                            BorderThickness="0"
                            FontSize="18"
                            Text="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                        <Button
                            Width="100"
                            Margin="10"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding LogIn}"
                            Content="Logga in"
                            FontSize="16"
                            Style="{StaticResource MaterialDesignRaisedButton}" />

                    </StackPanel>

                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                        <Label
                            Grid.Column="2"
                            Width="163"
                            Height="60"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            Content="Första gången?&#xA;Registrera dig här!"
                            FontSize="18"
                            Foreground="#DDFFFFFF" />

                        <Label
                            Grid.Column="2"
                            Width="58"
                            Height="31"
                            Margin="10,2,2,2"
                            HorizontalAlignment="Left"
                            Content="Förnamn"
                            FontSize="15" />

                        <TextBox
                            Grid.Column="2"
                            Width="210"
                            Height="28"
                            Margin="10,2,2,2"
                            HorizontalAlignment="Left"
                            Background="#FFBFBFBF"
                            FontSize="16"
                            SelectionBrush="#FFF7F7F7"
                            SelectionTextBrush="Black"
                            Text="{Binding NewUser.Firstname, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        <Label
                            Grid.Column="2"
                            Width="82"
                            Height="31"
                            Margin="10,2,2,2"
                            HorizontalAlignment="Left"
                            Content="Efternamn"
                            FontSize="15" />
                        <TextBox
                            Width="210"
                            Height="28"
                            Margin="10,2,2,2"
                            HorizontalAlignment="Left"
                            Background="#FFBFBFBF"
                            FontSize="16"
                            SelectionBrush="#FFF7F7F7"
                            SelectionTextBrush="Black"
                            Text="{Binding NewUser.Lastname, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                        <Label
                            Width="58"
                            Height="31"
                            Margin="10,2,2,-14"
                            HorizontalAlignment="Left"
                            Content="Email"
                            FontSize="15" />
                        <Label
                            Height="20"
                            Margin="0,0,4,-4"
                            HorizontalAlignment="Right"
                            Content="{Binding EmailValidationMessage}"
                            FontSize="10"
                            Foreground="PaleVioletRed"
                            Opacity="0.6"
                            Visibility="Visible" />
                        <TextBox
                            Width="210"
                            Height="28"
                            Margin="10,2,2,2"
                            HorizontalAlignment="Left"
                            Background="#FFBFBFBF"
                            FontSize="16"
                            SelectionBrush="#FFF7F7F7"
                            SelectionTextBrush="Black"
                            Text="{Binding NewUser.Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        <Label
                            Width="82"
                            Height="31"
                            Margin="10,2,2,2"
                            HorizontalAlignment="Left"
                            Content="Lösenord"
                            FontSize="15" />
                        <!--<PasswordBox
            Width="210"
            Height="28"
            Margin="0,346,35,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="#FFBDB9B9"
            CaretBrush="#FFBDBBBB"
            FontSize="16"
            Foreground="Black"
            SelectionBrush="#FFBDBBBB"
            SelectionTextBrush="#FF050000"
            Text="{Binding NewUser.Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>-->

                        <TextBox
                            Width="210"
                            Height="28"
                            Margin="10,2,2,2"
                            HorizontalAlignment="Left"
                            Background="#FFBFBFBF"
                            FontSize="16"
                            SelectionBrush="#FFF7F7F7"
                            SelectionTextBrush="Black"
                            Text="{Binding NewUser.Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />


                        <Button
                            Width="163"
                            Height="33"
                            Margin="10"
                            HorizontalAlignment="Left"
                            Command="{Binding Register}"
                            Content="Registrera dig"
                            FontSize="16"
                            Style="{StaticResource MaterialDesignRaisedButton}" />

                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </materialDesign:Card>
    </Grid>
</local:BasePage>
