<local:BasePage
    x:Class="G2Libsys.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:G2Libsys.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:G2Libsys.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControl="clr-namespace:G2Libsys.Controls"
    xmlns:vm="clr-namespace:G2Libsys.ViewModels"
    x:TypeArguments="vm:LoginViewModel"
    mc:Ignorable="d">
    <Grid>
        <Rectangle Opacity="0.7">
            <Rectangle.Fill>
                <SolidColorBrush Color="Black" />
            </Rectangle.Fill>
        </Rectangle>
        <Button
            Width="{Binding (FrameworkElement.ActualWidth)}"
            Height="{Binding (FrameworkElement.ActualHeight)}"
            Background="Transparent"
            Command="{Binding CancelCommand}"
            Cursor="Arrow"
            Style="{StaticResource MaterialDesignToolForegroundButton}" />

        <materialDesign:Card
            Background="{StaticResource primary_mid}"
            UniformCornerRadius="15"
            Margin="50"
            Width="420"
            MaxHeight="350"
            MinHeight="200">
            

            <Grid Height="{Binding (FrameworkElement.ActualHeight)}" ShowGridLines="False">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="200"/>

                </Grid.ColumnDefinitions>

                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource MaterialDesignDarkForeground}" />
                            <Setter Property="FontSize" Value="20" />
                        <Setter Property="FontFamily" Value="{StaticResource MaterialDesignFont}" />
                        <Setter Property="Margin" Value="0 5 0 3"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                    </Style>

                        <Style TargetType="TextBox">
                            <Setter Property="Background" Value="White" />
                        <Setter Property="MinHeight" Value="25"/>
                        <Setter Property="MinWidth" Value="45"/>
                    </Style>
                    </Grid.Resources>
               
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"  >

                    <TextBlock
                        Text="E-postadress"
                         />
                    <TextBox
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Text="Ange ditt lösenord"
                         />

                    <!--<PasswordBox
            Width="257"
            Height="40"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFBDB9B9"
            CaretBrush="#FFBDBBBB"
            FontSize="18"
            Foreground="Black"
            SelectionBrush="#FFBDBBBB"
            SelectionTextBrush="#FF050000" />-->

                    <TextBox
                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Text="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                    <Button
                        Margin="10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Command="{Binding LogIn}"
                        Content="Logga in"
                        Style="{StaticResource MaterialDesignRaisedButton}" />

                </StackPanel>

                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Grid.Column="1">
                    

                        <!--<TextBlock
                            Grid.Column="2"
                            TextWrapping="Wrap"
                            Text="Första gången? Registrera dig här!"
                             />-->

                        <TextBlock
                            Grid.Column="2"
                            Text="Förnamn"
                             />

                        <TextBox
                            Grid.Column="2"
                            Text="{Binding NewUser.Firstname, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        <TextBlock
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            Text="Efternamn"
                             />
                        <TextBox
                            
                            Text="{Binding NewUser.Lastname, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                        <TextBlock
                            HorizontalAlignment="Left"
                            Text="Email"
                             />
                       
                        <TextBox
                            Text="{Binding NewUser.Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                        <TextBlock
                            HorizontalAlignment="Left"
                            Text="Lösenord"
                             />
                        <!--<PasswordBox
            Width="210"
            Height="28"
            Margin="0,346,35,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="#FFBDB9B9"
            CaretBrush="#FFBDBBBB"
            FontSize="16"
            Foreground="Black"
            SelectionBrush="#FFBDBBBB"
            SelectionTextBrush="#FF050000"
            Text="{Binding NewUser.Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>-->

                        <TextBox
                            Text="{Binding NewUser.Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />


                        <Button
                            Margin="10"
                            Command="{Binding Register}"
                            Content="Registrera dig"
                            Style="{StaticResource MaterialDesignRaisedButton}" />

                    </StackPanel>

            </Grid>
        </materialDesign:Card>
    </Grid>
</local:BasePage>
