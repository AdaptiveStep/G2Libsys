    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource MaterialDesignFont}" />
            </Style>
        </Grid.Resources>

        <Border
            Grid.Column="0"
            MinWidth="350"
            MinHeight="400"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            CornerRadius="15">
            <StackPanel
                Width="320"
                Height="380"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
                <TextBlock
                    Margin="10"
                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                    Text="Min profil" />
                <StackPanel Orientation="Horizontal" />
                <TextBlock
                    Margin="10"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Text="{Binding CurrentUser.Email}" />


                <Border
                    Width="300"
                    Height="170"
                    Margin="10"
                    VerticalAlignment="Bottom">

                    <GroupBox FontFamily="{StaticResource MaterialDesignFont}" Header="Aktiva lån">
                        <ListView ItemsSource="{Binding LibraryObjects}" SelectionMode="Single">
                            <ListView.ItemTemplate>
                                <DataTemplate>


                                    <Grid Background="{StaticResource accent_light}">

                                        <TextBlock
                                            FontWeight="DemiBold"
                                            Foreground="Black"
                                            Text="{Binding Title}" />
                                    </Grid>


                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </GroupBox>
                </Border>

                <StackPanel
                    Height="30"
                    Margin="10,0,0,0"
                    Orientation="Horizontal">

                    <TextBlock Width="55" Text="Kort ID:" />
                    <TextBlock Text="{Binding UserCard.CardNumber, Mode=OneWay, NotifyOnSourceUpdated=True}" />
                </StackPanel>


                <!--<Button
                      Style="{StaticResource MaterialDesignRaisedButton}"
                      Content="{Binding CardStatus, Mode=OneWay}"
                      Command="{Binding ChangeCardStatusbutton}"
                      ToolTip="Resource name: MaterialDesignRaisedButton" Background="#FF009688" Width="130" Height="30"/>-->






            </StackPanel>
        </Border>




        <Border
            Grid.Column="1"
            MinWidth="350"
            MinHeight="400"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            CornerRadius="10">
            <StackPanel Orientation="Vertical">

                <TextBlock
                    Margin="10"
                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                    Text="Profilinställningar" />
                <Grid Margin="0,55,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="10">

                        <TextBox
                            materialDesign:HintAssist.Hint=" Ändra förnamn"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Background="{StaticResource AttentionToActionBrush}"
                            Text="{Binding Confirm.Firstname, Mode=OneWayToSource}" />
                        <TextBox
                            materialDesign:HintAssist.Hint=" Ändra Efternamn"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Background="{StaticResource AttentionToActionBrush}"
                            Text="{Binding Confirm.Lastname, Mode=OneWayToSource}" />

                        <TextBox
                            materialDesign:HintAssist.Hint=" Nytt lösenord"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Background="{StaticResource AttentionToActionBrush}"
                            Text="{Binding Confirm.Password, Mode=OneWayToSource}" />


                        <TextBox
                            materialDesign:HintAssist.Hint=" Ny E-post"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Background="{StaticResource AttentionToActionBrush}"
                            Text="{Binding Confirm.Email, Mode=OneWayToSource}" />




                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="10">


                        <TextBox
                            materialDesign:HintAssist.Hint=" Bekräfta förnamn"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Background="{StaticResource AttentionToActionBrush}"
                            Text="{Binding Confirm2.Firstname, Mode=OneWayToSource}" />
                        <TextBox
                            materialDesign:HintAssist.Hint=" Bekräfta efternamn"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Background="{StaticResource AttentionToActionBrush}"
                            Text="{Binding Confirm2.Lastname, Mode=OneWayToSource}" />
                        <TextBox
                            materialDesign:HintAssist.Hint=" Bekräfta lösenord"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Background="{StaticResource AttentionToActionBrush}"
                            Text="{Binding Confirm2.Password, Mode=OneWayToSource}" />



                        <TextBox
                            materialDesign:HintAssist.Hint=" Bekräfta E-post"
                            materialDesign:TextFieldAssist.HasClearButton="True"
                            Background="{StaticResource AttentionToActionBrush}"
                            Text="{Binding Confirm2.Email, Mode=OneWayToSource}" />

                    </StackPanel>

                </Grid>
                <Button
                    Grid.ColumnSpan="2"
                    Width="130"
                    Height="30"
                    Margin="0,20,0,10"
                    Background="#FF009688"
                    Command="{Binding Savebutton}"
                    Content="Bekräfta"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    ToolTip="Resource name: MaterialDesignRaisedButton" />
                <!--<TextBlock Text="Skapa nytt kort" HorizontalAlignment="Center"/>




