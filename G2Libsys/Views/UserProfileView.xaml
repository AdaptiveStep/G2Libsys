    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"  Background="White" CornerRadius="15" MinHeight="400" MinWidth="350" VerticalAlignment="Center" HorizontalAlignment="Center">

            <StackPanel Height="380" Width="320" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                   
                    <Border Width="70" Height="70" CornerRadius="50" Background="#FFA64B4B"/>
                </StackPanel>
                <Border>
                    <TextBlock Text="{Binding CurrentUser.Email}"  FontSize="16" Margin="10" FontFamily="Segoe UI" FontWeight="Normal" HorizontalAlignment="Center">

                    </TextBlock>
                </Border>
                <Border Width="295"/>
                <Border Width="104"  HorizontalAlignment="Right"/>
                <Border Height="170" Width="300" VerticalAlignment="Bottom" Margin="10" >
                    <GroupBox Header="Aktiva lån">
                        <ListView
                            
                            SelectionMode="Single"
                            ItemsSource="{Binding LibraryObjects}">
                            <ListView.ItemTemplate>
                                <DataTemplate>


                                    <Grid Background="{StaticResource accent_light}">

                                        <TextBlock 
                                             FontWeight="DemiBold"
                                             Foreground="Black"
                                             Text="{Binding Title}"/>
                                    </Grid>


                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </GroupBox>
                </Border>

                <StackPanel Orientation="Horizontal"  Height="30" Margin="10 0 0 0">
                    <TextBlock Text="Kort ID:" Width="55"/>
                    <TextBlock Text="{Binding UserCard.CardNumber, Mode=OneWay, NotifyOnSourceUpdated=True}"/>
                </StackPanel>


                <!--<Button
                      Style="{StaticResource MaterialDesignRaisedButton}"
                      Content="{Binding CardStatus, Mode=OneWay}"
                      Command="{Binding ChangeCardStatusbutton}"
                      ToolTip="Resource name: MaterialDesignRaisedButton" Background="#FF009688" Width="130" Height="30"/>-->






            </StackPanel>
        </Border>




        <Border Grid.Column="1" MinHeight="400" MinWidth="350" Background="White" CornerRadius="15"  VerticalAlignment="Center" HorizontalAlignment="Center" >
            <StackPanel Orientation="Vertical">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border/>
                    <StackPanel Grid.Column="0" Margin="10"  >

                        <TextBox
                    Text="{Binding Confirm.Firstname, Mode=OneWayToSource}"
                        materialDesign:TextFieldAssist.HasClearButton="True" 
                    materialDesign:HintAssist.Hint=" Ändra förnamn"  Background="{StaticResource AttentionToActionBrush}" >
                        </TextBox>
                        <TextBox
                            Text="{Binding Confirm.Lastname, Mode=OneWayToSource}"
                         materialDesign:TextFieldAssist.HasClearButton="True" 
                    materialDesign:HintAssist.Hint=" Ändra Efternamn"   Background="{StaticResource AttentionToActionBrush}">
                        </TextBox>
                        <TextBox
                            Text="{Binding Confirm.Password, Mode=OneWayToSource}"
                         Background="{StaticResource AttentionToActionBrush}"
                        materialDesign:HintAssist.Hint=" Nytt lösenord"
                        materialDesign:TextFieldAssist.HasClearButton="True" 
                        />


                        <TextBox
                         Background="{StaticResource AttentionToActionBrush}"
                    materialDesign:HintAssist.Hint=" Ny E-post"
                        materialDesign:TextFieldAssist.HasClearButton="True" 
                        Text="{Binding Confirm.Email, Mode=OneWayToSource}">
                        </TextBox>




                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="10">


                        <TextBox
                        materialDesign:TextFieldAssist.HasClearButton="True" 
                         Background="{StaticResource AttentionToActionBrush}"
                    materialDesign:HintAssist.Hint=" Bekräfta förnamn"  Text="{Binding Confirm2.Firstname, Mode=OneWayToSource}"/>
                        <TextBox
                            materialDesign:TextFieldAssist.HasClearButton="True" 
                             Background="{StaticResource AttentionToActionBrush}"
                    materialDesign:HintAssist.Hint=" Bekräfta efternamn"  Text="{Binding Confirm2.Lastname, Mode=OneWayToSource}"/>
                        <TextBox 
                            materialDesign:TextFieldAssist.HasClearButton="True" 
                             Background="{StaticResource AttentionToActionBrush}"
                            Text="{Binding Confirm2.Password, Mode=OneWayToSource}"
                        materialDesign:HintAssist.Hint=" Bekräfta lösenord"
                        
                         />



                        <TextBox
                        materialDesign:TextFieldAssist.HasClearButton="True" 
                         Background="{StaticResource AttentionToActionBrush}"
                    materialDesign:HintAssist.Hint=" Bekräfta E-post"
                        Text="{Binding Confirm2.Email, Mode=OneWayToSource}"/>

                    </StackPanel>
                </Grid>
                <Button  Grid.ColumnSpan="2"
                        
                        Margin="0 20 0 10"
                        
                        Command="{Binding Savebutton}"
                      Style="{StaticResource MaterialDesignRaisedButton}"
                        Content="Bekräfta"
                         ToolTip="Resource name: MaterialDesignRaisedButton" Background="#FF009688" Width="130" Height="30"/>
                <!--<TextBlock Text="Skapa nytt kort" HorizontalAlignment="Center"/>




