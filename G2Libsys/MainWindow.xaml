<Window x:Class="G2Libsys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:G2Libsys.Views"
        xmlns:vm="clr-namespace:G2Libsys.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        SizeToContent="Manual">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:FrontPageViewModel}">
            <local:FrontPageView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TestVM}">
            <local:TestView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Frame Content="{Binding CurrentViewModel}"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
