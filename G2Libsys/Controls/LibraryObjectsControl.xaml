<UserControl
    x:Class="G2Libsys.Controls.LibraryObjectsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:G2Libsys.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:convert="clr-namespace:G2Libsys.Converters"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">

        <Label
                
                HorizontalAlignment="Center"
                FontSize="22"
                FontWeight="DemiBold"
                Foreground="Black"
                Content="Resultat"/>
        <ListView
                
                SelectionMode="Single"
                HorizontalAlignment="Left"
                ItemsSource="{Binding SearchObjects}"
                SelectedItem="{Binding SelectedLibraryObject}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Background="{StaticResource accent_light}">
                        
                    <StackPanel Orientation="Horizontal">
                        <TextBlock 
                                Margin="10 10 10 10 "
                                FontSize="22"
                                FontWeight="DemiBold"
                                Foreground="Black"
                                Text="{Binding Title}"/>
                        <TextBlock    
                                Margin="10 10 10 10 "
                                FontSize="22"
                                FontWeight="DemiBold"
                                Foreground="Black"
                                Text="{Binding Publisher}"/>

                        <!--<Image 
                                Source="{Binding ImageSource, Converter={convert:PathToImageConverter}}"/>-->

                    </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

            <!--<ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Width="{Binding (FrameworkElement.ActualWidth), 
                                   RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                   ItemWidth="{Binding (ListView.View).ItemWidth, 
                                   RelativeSource={RelativeSource AncestorType=ListView}}"
                                   MinWidth="{Binding ItemWidth, RelativeSource={RelativeSource Self}}"
                                   ItemHeight="{Binding (ListView.View).ItemHeight, 
                                   RelativeSource={RelativeSource AncestorType=ListView}}"
                                   MaxWidth="720"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>-->
        </ListView>
    </StackPanel>
</UserControl>
