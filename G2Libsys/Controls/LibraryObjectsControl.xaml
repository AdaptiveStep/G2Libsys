<UserControl
    x:Class="G2Libsys.Controls.LibraryObjectsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:G2Libsys.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:convert="clr-namespace:G2Libsys.Converters"
    d:DesignHeight="200"
    d:DesignWidth="800"
    mc:Ignorable="d">

        <ScrollViewer 
            Background="Transparent"
            
            >
            <ListView
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                ScrollViewer.CanContentScroll="True"
                Margin="10"
                DataContext="{Binding}"
                ItemsSource="{Binding LibraryObjects}"
                SelectedItem="{Binding SelectedLibraryObject}"
                MaxHeight="200"
                SelectionMode="Single"
                >
                
            <ListView.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card MaxHeight="180" UniformCornerRadius="4" Background="Transparent">
                        
                    <Image 
                        Margin="1"
                        Source="{Binding ImageSource, Converter={convert:PathToImageConverter}}"/>
                    </materialDesign:Card>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Width="{Binding (FrameworkElement.ActualWidth), 
                                   RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                   ItemWidth="{Binding (ListView.View).ItemWidth, 
                                   RelativeSource={RelativeSource AncestorType=ListView}}"
                                   MinWidth="{Binding ItemWidth, RelativeSource={RelativeSource Self}}"
                                   ItemHeight="{Binding (ListView.View).ItemHeight, 
                                   RelativeSource={RelativeSource AncestorType=ListView}}"
                                   MaxWidth="720"/>
                    
                    
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
               
            </ListView>
        </ScrollViewer>




</UserControl>
