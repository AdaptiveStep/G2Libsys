<UserControl
    x:Class="G2Libsys.Controls.LeftNavBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControl="clr-namespace:G2Libsys.Controls"
    d:DesignHeight="160"
    d:DesignWidth="160"
    mc:Ignorable="d">
    <Grid Background="{DynamicResource accent_light}">




        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>


        <materialDesign:PackIcon
            Grid.Column="0"
            Width="24"
            Height="24"
            Margin="10,10,0,0"
            Kind="Library" />
        <Button
            Grid.Column="1"
            Margin="7,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{x:Null}"
            BorderBrush="{x:Null}"
            Content="Boktips"
            Foreground="#FF080000" />

        <Button
            Grid.Column="1"
            Margin="7,48,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{x:Null}"
            BorderBrush="{x:Null}"
            Content="Bibliotek"
            Foreground="#FF080000" />


        <materialDesign:PackIcon
            Grid.Column="0"
            Width="24"
            Height="24"
            Margin="10,52,0,0"
            Kind="AccountBox" />
        <materialDesign:PackIcon
            Grid.Column="0"
            Width="24"
            Height="24"
            Margin="10,91,0,0"
            Kind="Headphones" />
        <materialDesign:PackIcon
            Grid.Column="0"
            Width="24"
            Height="24"
            Margin="10,132,0,0"
            Kind="DesktopMac" />
        <Button
            Grid.Column="1"
            Width="109"
            Margin="7,122,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{x:Null}"
            BorderBrush="{x:Null}"
            Content="Seminarium"
            Foreground="#FF080000" />
        <Button
            Grid.Column="1"
            Margin="7,83,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{x:Null}"
            BorderBrush="{x:Null}"
            Content="E-Böcker"
            Foreground="#FF080000" />



    </Grid>
</UserControl>
